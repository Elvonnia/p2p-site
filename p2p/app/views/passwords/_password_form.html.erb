<%= form_for(Password.new, url:{action: "create"} ) do |f|%>
	<%= f.label :password , 'Enter a password' %>
	<%= f.password_field :password, class : 'form-control', data: {password_field: "password"} %>
	<%= f.submit "send", class="btn btn-primary", data: {send: "password"} %>
<% end %>

<%= form_for(User.new, url:{action: "create"} )do |f| %>
  <%= f.label :username, 'Enter a username' %><br/>
  <%= f.text_field :username %><br/>
  <%= f.submit 'Start chatting' %>
<% end %>